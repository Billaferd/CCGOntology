@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix ccg: <https://example.org/ccg> .

# Quantum Nexus as a Card Game
ccg:QuantumNexus rdf:type ccg:CardGame ;
    skos:prefLabel "Quantum Nexus"@en ;
    dct:description "A sci-fi trading card game of strategic battles between advanced civilizations."@en .

# Game Components
ccg:QuantumNexusDeck a rdfs:Class ;
    rdfs:subClassOf ccg:Deck ;
    ccg:hasCardCount 200 .

ccg:MissionCardArea a rdfs:Class ;
    rdfs:subClassOf ccg:PublicPlayZone ;
    ccg:hasPlayArea ccg:QuantumNexus .

ccg:LoadoutArea rdf:type ccg:PublicPlayZone ;
    ccg:hasPlayArea ccg:QuantumNexus .

ccg:QuantumNexusBattlefield a rdfs:Class ;
    rdfs:subClassOf ccg:PlayArea ;
    ccg:hasPlayArea ccg:QuantumNexus .

# Example Quadrants (Full Representation Would Include All Quadrants)
ccg:FrontLeftQuadrant rdf:type ccg:PlayZone ;
    ccg:hasPlayArea ccg:QuantumNexusBattlefield .

ccg:FrontCenterQuadrant rdf:type ccg:PlayZone ;
    ccg:hasPlayArea ccg:QuantumNexusBattlefield . 

# Card Types
ccg:UnitCard a rdfs:Class ;
    rdfs:subClassOf ccg:Card .

ccg:LeaderUnitCard a rdfs:Class ;
    rdfs:subClassOf ccg:UnitCard .

ccg:AssetCard a rdfs:Class ;
    rdfs:subClassOf ccg:Card .

ccg:EventCard a rdfs:Class ;
    rdfs:subClassOf ccg:Card .

ccg:UpgradeCard a rdfs:Class ;
    rdfs:subClassOf ccg:Card .

ccg:TerrainCard a rdfs:Class ;
    rdfs:subClassOf ccg:Card .

ccg:MissionCard a rdfs:Class ;
    rdfs:subClassOf ccg:Card .

# Card Attributes
ccg:hasCP rdf:type owl:DatatypeProperty ;
    rdfs:domain ccg:Card ;
    rdfs:range xsd:integer . 

ccg:hasAttackValue owl:DatatypeProperty ;
    rdfs:subClassOf ccg:CardStat;
    skos:prefLabel "Attack"@en .

ccg:hasDefenseValue owl:DatatypeProperty;
    rdfs:subClassOf ccg:CardStat;
    skos:prefLabel "Defense"@en .

# Domain Properties (Could Be Expanded for All Domains)
ccg:hasTechnologyPoints a owl:DatatypeProperty ;
    rdfs:domain ccg:Card ;
    rdfs:range xsd:integer .

# Duplicate Limit
ccg:hasDuplicateLimit a owl:DatatypeProperty ;
    rdfs:domain ccg:Card ;
    rdfs:range xsd:integer .

# Turn Structure (Basic Phases)
ccg:QuantumNexusTurnStructure rdf:type ccg:TurnStructure ;
    ccg:hasPhase ccg:ReadyPhase ;
    ccg:hasPhase ccg:DeploymentPhase ;
    ccg:hasPhase ccg:CommandPhase ;
    ccg:hasPhase ccg:BattlePhase . 

# Game Actions (Examples)
ccg:DeployUnitAction rdf:type ccg:CardAction ;
    skos:prefLabel "Deploy Unit" ;
    dct:description "Play a unit card from the hand to the battlefield."@en .

ccg:ActivateAbilityAction rdf:type ccg:ActivateAction ;
    skos:prefLabel "Activate Ability" ;
    dct:description "Use a card's ability by paying its cost."@en .